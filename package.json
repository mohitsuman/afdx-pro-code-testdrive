{
    "name": "afdx-pro-code-testdrive",
    "private": true,
    "version": "1.0.0",
    "description": "Agentforce DX Pro-Code testdrive featuring a minimal agentic app for Coral Cloud Resort.",
    "scripts": {
        "lint": "eslint **/lwc/**/*.js",
        "test": "npm run test:unit",
        "test:unit": "sfdx-lwc-jest",
        "test:unit:watch": "sfdx-lwc-jest --watch",
        "test:unit:debug": "sfdx-lwc-jest --debug",
        "test:unit:coverage": "sfdx-lwc-jest --coverage",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
            "prettier --write"
        ],
        "**/lwc/**/*.js": [
            "eslint"
        ],
        "**/lwc/**": [
            "sfdx-lwc-jest -- --bail --findRelatedTests --passWithNoTests"
        ]
    },
    "author": "Vivek M. Chawla",
    "license": "CC0-1.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vivekmchawla/coral-cloud-afdx"
    },
    "devDependencies": {
        "@lwc/eslint-plugin-lwc": "^2.1.0",
        "@prettier/plugin-xml": "^3.4.1",
        "@sa11y/jest": "^7.0.0",
        "@salesforce/eslint-config-lwc": "^3.7.1",
        "@salesforce/eslint-plugin-lightning": "^1.0.1",
        "@salesforce/sfdx-lwc-jest": "^7.0.1",
        "eslint": "^8.57.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.11.0",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.2",
        "prettier-plugin-apex": "^2.2.4"
    },
    "volta": {
        "node": "20.13.1"
    }
}
